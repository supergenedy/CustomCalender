<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="Regular">
        <item name="android:fontFamily">@font/tstar_pro_regular</item>
        <item name="fontFamily">@font/tstar_pro_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/tstar_pro_medium</item>
        <item name="fontFamily">@font/tstar_pro_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">@font/tstar_pro_bold</item>
        <item name="fontFamily">@font/tstar_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
